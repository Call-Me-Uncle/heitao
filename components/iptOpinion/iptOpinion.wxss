.wx-mask {
    position: fixed;
    z-index: 4001;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
}

.wx-dialog {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: linear-gradient(135deg,transparent 10px,rgb(12,99,82) 0) top left,linear-gradient(-135deg,transparent 10px,rgb(12,99,82) 0) top right,linear-gradient(-45deg,transparent 10px,rgb(12,99,82) 0) bottom right,linear-gradient(45deg,transparent 10px,rgb(12,99,82) 0) bottom left;
    background-size: 51% 51%;
    background-repeat: no-repeat;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.wx-dialog-title {
    font-size: 36rpx;
    color: #fff;
    padding: 15px 15px 5px;
    border-bottom: 4rpx solid #037f65;
}

.wx-dialog-content {
    width: 270px;
    padding: 15px;
    min-height: 40px;
    max-height: 300px;
    font-size: 16px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
}

.wx-dialog-btn {
    position: relative;
    height: 130rpx;
    width: 400rpx;
    display: inline-block;
    text-align: center;
}

.wx-dialog-btn text {
    color: #fff;
    font-size: 30rpx;
    position: absolute;
    z-index: 100;
    top: 19rpx;
    left: 150rpx;
    letter-spacing: 5rpx;
}

.button {
    width: 339rpx;
    height: 90rpx;
    position: relative;
}

.wx-dialog-footer .first {
    color: #353535;
}

.wx-dialog-footer .second {
    color: #3CC51F;
}

.opinion textarea {
    width: 502rpx;
    margin: 30rpx;
    padding: 10rpx 15rpx;
    text-align: left;
    font-size: 30rpx;
    color: #fff;
    height: 292rpx;
    box-shadow: 0px 0px 250px rgb(0,0,0);
    border: 4rpx solid #037f65;
}

input::-webkit-input-placeholder {
    color: #fff;
}

input::-moz-placeholder {
    color: #fff;
}

input:-moz-placeholder {
    color: #fff;
}

input:-ms-input-placeholder {
    color: #fff;
}

