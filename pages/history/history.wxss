@import "../../template/template.wxss";

scroll-view {
    box-sizing: border-box;
}

.itemContent {
    position: relative;
}

.noDataContent .info {
    color: #fff;
}

.itemCenter {
    width: 100%;
    box-sizing: border-box;
    padding-left: 120rpx;
    padding-right: 30rpx;
    color: #fff;
    height: 150rpx;
    display: flex;
    justify-content: space-between;
    background: rgba(6,12,47,0.3);
}

.itemCenter .dsd {
    width: 260rpx;
    padding: 0 20rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    flex-direction: column;
    text-align: left;
}

.itemCenter .dsd text {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #fff;
}

.itemCenter .dsdTime {
    width: 150rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    flex-direction: column;
    text-align: center;
}

.itemCenter .dsdTime text {
    font-size: 24rpx;
    line-height: 40rpx;
    color: #fff;
}

.rightContent {
    width: 154rpx;
    text-align: right;
}

.money {
    font-size: 26rpx;
    line-height: 150rpx;
    margin-right: 15rpx;
    color: #fff;
}

.scoreNumber {
    font-size: 48rpx;
    line-height: 150rpx;
    color: #ffb400;
    margin: 5rpx;
}

.rightArrow {
    width: 18rpx;
    height: 32rpx;
    vertical-align: middle;
}

.PukeImg {
    width: 110rpx;
    height: 110rpx;
    border-radius: 100%;
    border: 1rpx solid #555668;
    position: absolute;
    background: #a5a7b4;
    top: 25rpx;
    left: 10rpx;
    display: flex;
    align-items: center;
}

.itemBottom {
    width: 100%;
    box-sizing: border-box;
    padding-left: 80rpx;
    padding-right: 30rpx;
}

.bottom {
    margin-top: 50rpx;
}

.itemInfo {
    font-size: 28rpx;
    color: #898989;
    line-height: 36rpx;
}

.PukeImg image {
    width: 51rpx;
    height: 69rpx;
}

.pukeItem1 {
    position: relative;
    left: 15rpx;
    top: 10rpx;
}

.pukeItem2 {
    position: relative;
    left: -1rpx;
    top: -6rpx;
}

.lineImg {
    width: 750rpx;
    height: 2rpx;
    display: block;
}

.bjImg {
    width: 100%;
    height: 100%;
    position: fixed;
}

.top {
    position: absolute;
    z-index: 100;
    top: 80rpx;
}

.DownInfo {
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    line-height: 60rpx;
}

.hisTime {
    font-size: 22rpx!important;
}

.historyTop {
    height: 80rpx;
    position: fixed;
    left: 0;
    width: 100%;
    z-index: 10000;
    display: flex;
    justify-content: space-between;
}

.historyTable {
    width: 375rpx;
    text-align: center;
    position: relative;
    line-height: 80rpx;
    font-size: 36rpx;
}

.historySelect {
    position: absolute;
    width: 225rpx;
    top: 80rpx;
    right: 75rpx;
    font-size: 30rpx;
    background: rgba(0,0,0,0.7);
    text-align: center;
    line-height: 80rpx;
    overflow: hidden;
    height: 240rpx;
    display: none;
    color: #fff;
    border-radius: 0 0 20rpx 20rpx;
}

.historySelect view {
    border-bottom: 1rpx solid #6b6b6b;
}

.historyAnimate1 {
    -webkit-animation: historyAnimate1 0.1s linear;
    display: block;
}

.defaultStyle {
    background: rgba(27,14,32,0.86);
    color: #fff;
}

.clickStyle {
    background: rgba(195,191,225,0.86);
    color: #ffb400;
}

@-webkit-keyframes historyAnimate1 {
    from {
        height: 0;
    }

    to {
        height: 240rpx;
    }
}

@keyframes historyAnimate1 {
    from {
        height: 0;
    }

    to {
        height: 240rpx;
    }
}

.historyAnimate2 {
    -webkit-animation: historyAnimate2 0.1s linear;
    display: none;
}

@-webkit-keyframes historyAnimate2 {
    from {
        height: 240rpx;
    }

    to {
        height: 0rpx;
    }
}

@keyframes historyAnimate2 {
    from {
        height: 240rpx;
    }

    to {
        height: 0rpx;
    }
}