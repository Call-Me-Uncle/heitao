@import "../../template/template.wxss";

scroll-view {
    box-sizing: border-box;
    padding: 20rpx;
}

.itemContent {
    background: #fff;
    position: relative;
    margin-bottom: 10rpx;
    border-radius: 20rpx;
    padding: 10rpx 0;
}

.itemCenter {
    width: 100%;
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #f2f2f2;
    padding: 0 20rpx;
}

.orderInfo {
    color: #858585;
    font-size: 24rpx;
    line-height: 36rpx;
    padding: 10rpx 20rpx;
}